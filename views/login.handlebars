<div class="row">
    <div class="col-md-6">
        <h2>Login</h2>

        <form class="form login-form">
            <div class="form-group">
                <label class="label" for="username-login">Username:</label>
                <input class="form-input input-text" type="text" id="username-login" />
            </div>
            <div class="form-group">
                <label class="label" for="password-login">Password:</label>
                <input class="form-input input-text" type="password" id="password-login" />
            </div>
            <div class="form-group">
                <button class="btn btn-signup" type="submit">Login</button>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <h2>Signup</h2>

        <form class="form signup-form">
            <div class="form-group text-right">
                <label class="label" for="name-signup">Username:</label>
                <input class="form-input input-text" type="text" id="name-signup" />
            </div>

            <div class="form-group text-right">
                <label class="label" for="password-signup">Password:</label>
                <input class="form-input input-text" type="password" id="password-signup" />
            </div>

            <div class="form-group text-right">
                <label class="label" for="password-confirm">Confirm password:</label>
                <input class="form-input" type="password" id="password-confirm" />
            </div>
             <span class="password-match"></span>
           
            <div class="form-group text-right">
                <label class= "label" for="email-signup">Email:</label>
                <input class="form-input" type="text" id="email-signup" />
            </div>
            <div class="form-group">
                <button class="btn btn-signup" type="submit">Signup</button>
            </div>
        </form>
    </div>

</div>


<script src="./js/login.js"></script>